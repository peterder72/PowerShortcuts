<?xml version="1.0" encoding="UTF-8"?>

<!-- Define the variables in "$(var.*) expressions" -->
<?define Name = "PowerShortcuts" ?>
<?define Manufacturer = "Osetr" ?>
<?define Version = "0.0.2" ?>
<?define UpgradeCode = "d1fb7d20-509e-431c-b863-a8ae4c1569a0" ?>

<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">

  <Package Name="$(Name)"
           Manufacturer="$(Manufacturer)"
           Version="$(Version)"
           Scope="perUser"
           UpgradeCode="$(var.UpgradeCode)"
           Compressed="true">

    <!-- Allow upgrades and prevent downgrades -->
    <MajorUpgrade DowngradeErrorMessage="A later version of PowerShortcuts is already installed. Setup will now exit." />
    <MediaTemplate EmbedCab="yes" />

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="LocalAppDataFolder">
        <Directory Id="INSTALLFOLDER" Name="$(var.Name)">
        </Directory>
      </Directory>
    </Directory>

    <!-- The files inside this DirectoryRef are linked to
             the App.WindowsService directory via INSTALLFOLDER -->
    <DirectoryRef Id="INSTALLFOLDER">

      <!-- Create a single component which is the App.WindowsService.exe file -->
      <Component Id="ServiceExecutable" Bitness="always64" Guid="642cc5a9-eb76-4708-a619-3e3bd5dea645">

          <RegistryValue Root="HKCU" Key="Software\$(var.Manufacturer)\$(var.Name)" Name="installed" Type="integer" Value="1" KeyPath="yes" />

        <!-- Copies the App.WindowsService.exe file using the
                     project reference preprocessor variables -->
        <File Id="PowerShortcuts.Host.exe"
              Source="..\Deploy\PowerShortcuts\PowerShortcuts.Host.exe" />
        <File Id="VirtualDesktopAccessor.dll"
           Source="..\Deploy\PowerShortcuts\VirtualDesktopAccessor.dll" />

        <RemoveFolder Id="RemoveFiles" Directory="INSTALLFOLDER" On="uninstall"/>

        <!-- Tell WiX to install the Service -->
        
       <!-- <ServiceInstall Id="ServiceInstaller" 
                        Type="ownProcess" 
                        Name="PowerShortcuts.Host" 
                        DisplayName="$(Name)" 
                        Description="PowerShortcuts Service" 
                        Start="auto" 
                        ErrorControl="normal" /> 
 
        <ServiceControl Id="StartService"  
                        Start="install"  
                        Stop="both" 
                        Remove="uninstall" 
                        Name="PowerShortcuts.Host"
                        Wait="true" /> -->
      </Component>
    </DirectoryRef>

    <!-- Tell WiX to install the files -->
    <Feature Id="Service" Title="PowerShortcuts.Host Setup" Level="1">
      <ComponentRef Id="ServiceExecutable" />
    </Feature>

  </Package>
</Wix>